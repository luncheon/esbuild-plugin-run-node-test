{
  "name": "esbuild-plugin-run-node-test",
  "version": "0.1.1",
  "description": "Please write tests in your source file. This esbuild plugin runs the tests and remove them from the bundle.",
  "license": "WTFPL",
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "keywords": [
    "esbuild",
    "unit",
    "test",
    "tests",
    "testing",
    "runner"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 140,
    "trailingComma": "all"
  },
  "scripts": {
    "build": "tsc -p .",
    "test": "cd example && npm t"
  },
  "devDependencies": {
    "@types/node": "^17.0.30",
    "esbuild": "^0.14.38",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@swc/core": "^1.2.174"
  }
}
